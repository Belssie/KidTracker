<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitish_purple"
    android:backgroundTint="@color/whitish_purple"
    tools:context=".main.Activities.HomeActivity">

    <TextView
        android:id="@+id/tv_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_top_textview"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/whitish_purple"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_settings"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="66dp"
        android:layout_height="49dp"
        android:background="@drawable/rectangle_top_textview"
        app:backgroundTint="@color/deep_purple"
        app:icon="@android:drawable/ic_menu_manage"
        app:iconTint="@color/whitish_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/whitish_purple"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="105dp"
        android:background="@drawable/circle_image_button1"
        android:backgroundTint="@color/good_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_home"
        app:shapeAppearanceOverlay="@style/Circular"
        app:tintMode="src_over" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="410dp"
        android:layout_height="460dp"
        android:layout_marginTop="2dp"
        android:background="@color/whitish_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile">

        <Button
            android:id="@+id/btn_feeding"
            android:layout_width="195dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rectangle_top_left"
            android:fontFamily="@font/roboto_black"
            android:text="@string/feeding"
            android:textColor="@color/deep_purple"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_sleeping"
            android:layout_width="195dp"
            android:layout_height="150dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangle_top_right"
            android:fontFamily="@font/roboto_black"
            android:text="@string/sleeping"
            android:textColor="@color/deep_purple"
            android:textStyle="bold"
            android:visibility="gone"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_diaper"
            android:layout_width="195dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/roboto_black"
            android:text="@string/diaper"
            android:textColor="@color/deep_purple"
            android:textStyle="bold"
            android:visibility="gone"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_pumping"
            android:layout_width="195dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_black"
            android:text="@string/pumping"
            android:textColor="@color/deep_purple"
            android:textStyle="bold"
            android:visibility="gone"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_important"
            android:layout_width="195dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/rectangle_bottom_left"
            android:fontFamily="@font/roboto_black"
            android:text="@string/important"
            android:textColor="@color/deep_purple"
            android:textStyle="bold"
            android:visibility="gone"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_alarms"
            android:layout_width="195dp"
            android:layout_height="150dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangle_bottom_right"
            android:fontFamily="@font/roboto_black"
            android:text="@string/activity_reminders"
            android:textColor="@color/deep_purple"
            android:textStyle="bold"
            android:visibility="gone"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_add_kid_home"
            android:layout_width="400dp"
            android:layout_height="450dp"
            android:background="@drawable/pop_up_window"
            android:fontFamily="@font/roboto_black"
            android:text="@string/plus"
            android:textColor="@color/more_purple"
            android:textSize="34sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:backgroundTint="@color/whitish_purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_sleep_home"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="209dp"
        android:layout_marginTop="95dp"
        android:fontFamily="@font/roboto_medium_italic"
        android:textAlignment="center"
        android:textColor="@color/more_purple"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/tv_last_diaper"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="241dp"
        android:fontFamily="@font/roboto_medium_italic"
        android:textAlignment="center"
        android:textColor="@color/more_purple"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/tv_feeding_home"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/roboto_medium_italic"
        android:textAlignment="center"
        android:textColor="@color/more_purple"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/tv_pumping_home"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="209dp"
        android:layout_marginTop="241dp"
        android:fontFamily="@font/roboto_medium_italic"
        android:textAlignment="center"
        android:textColor="@color/more_purple"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/tv_important"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="390dp"
        android:fontFamily="@font/roboto_medium_italic"
        android:textAlignment="center"
        android:textColor="@color/more_purple"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/tv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="80dp"
        android:drawableStart="@android:drawable/ic_menu_camera"
        app:layout_constraintStart_toStartOf="@+id/iv_profile"
        app:layout_constraintTop_toTopOf="@+id/iv_profile" />

    <TextView
        android:id="@+id/tv_reminders"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="209dp"
        android:layout_marginTop="390dp"
        android:fontFamily="@font/roboto_medium_italic"
        android:textAlignment="center"
        android:textColor="@color/more_purple"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

    <ProgressBar
        android:id="@+id/pb_home"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="400dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>