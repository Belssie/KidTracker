<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitish_purple"
    tools:context=".main.Activities.PumpingActivity">


    <Chronometer
        android:id="@+id/chrono_left_pumping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/good_purple"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Chronometer
        android:id="@+id/chrono_right_pumping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/good_purple"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn_left_pumping"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/rectangle_button_left"
        android:visibility="invisible"
        app:backgroundTint="@color/good_purple"
        app:icon="?android:attr/textSelectHandleLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />

    <Button
        android:id="@+id/btn_left_pumping_pause"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/rectangle_button_left"
        android:visibility="invisible"
        app:backgroundTint="@color/good_purple"
        app:icon="@android:drawable/ic_media_pause"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_stop_pumping"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="110dp"
        android:background="@color/deep_purple"
        android:visibility="invisible"
        app:backgroundTint="@color/good_purple"
        app:icon="@android:drawable/picture_frame"
        app:iconGravity="textEnd"
        app:iconTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_reset_pumping"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="110dp"
        android:background="@color/deep_purple"
        android:text="@string/reset"
        android:textColor="@color/whitish_purple"
        android:visibility="invisible"
        app:backgroundTint="@color/good_purple"
        app:iconGravity="textEnd"
        app:iconTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_right_pumping"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/rectangle_all_right"
        android:visibility="invisible"
        app:backgroundTint="@color/good_purple"
        app:icon="?android:attr/textSelectHandleRight"
        app:iconGravity="start|textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />

    <Button
        android:id="@+id/btn_right_pumping_pause"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/rectangle_all_right"
        android:visibility="invisible"
        app:backgroundTint="@color/good_purple"
        app:icon="@android:drawable/ic_media_pause"
        app:iconGravity="start|textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_simultaneous_pumping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/good_purple"
        android:text="@string/simultaneous"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />


    <Button

        android:id="@+id/btn_cancel_pumping"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_left"
        android:fontFamily="@font/roboto_black"
        android:text="@string/cancel"
        android:textColor="@color/good_purple"
        android:textStyle="bold"
        app:backgroundTint="@color/whitish_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/il_note_pumping"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn_save_pumping"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_right"
        android:fontFamily="@font/roboto_black"
        android:text="@string/save"
        android:textColor="@color/whitish_purple"
        android:textStyle="bold"
        app:backgroundTint="@color/good_purple"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel_pumping"
        app:layout_constraintTop_toBottomOf="@+id/il_note_pumping"
        tools:ignore="TextContrastCheck" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_started_at_pumping"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="220dp"
        android:hint="@string/time_string"
        android:textColorHint="@color/good_purple"
        app:boxStrokeColor="@color/less_purple"
        app:hintTextColor="@color/good_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/iet_started_at_pumping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:drawableStart="@android:drawable/ic_menu_my_calendar"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:textColor="@color/good_purple"
            android:textColorHint="@color/good_purple"
            android:textSize="24sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_started_with_pumping"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:hint="@string/started_with"
        android:textColorHint="@color/good_purple"
        app:boxStrokeColor="@color/good_purple"
        app:hintTextColor="@color/good_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/il_started_at_pumping">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/iet_started_with_pumping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:textColor="@color/good_purple"
            android:textColorHint="@color/deep_purple"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_amount_pumping"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:hint="@string/amount_string_g"
        android:textColorHint="@color/good_purple"
        app:boxStrokeColor="@color/good_purple"
        app:hintTextColor="@color/good_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/il_started_with_pumping">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/iet_amount_pumping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:inputType="number"
            android:textColor="@color/good_purple"
            android:textColorHint="@color/deep_purple"
            android:textSize="20sp"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_note_pumping"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:hint="@string/hint_note"
        android:textColorHint="@color/good_purple"
        app:boxStrokeColor="@color/good_purple"
        app:hintTextColor="@color/good_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/il_amount_pumping">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/iet_note_pumping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:textColor="@color/good_purple"
            android:textColorHint="@color/good_purple"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_pumping"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_top_textview"
        android:gravity="center_horizontal"
        android:text="@string/pumping"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/whitish_purple"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_back_pumping"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:icon="?attr/homeAsUpIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ProgressBar
        android:id="@+id/pb_pumping"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="400dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_chron_pumping"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:icon="@android:drawable/ic_menu_recent_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>